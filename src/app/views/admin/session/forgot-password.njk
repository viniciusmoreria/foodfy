{% extends "../../site/layout.njk" %}

{% block content %}

  <form class="register_form" method="POST" action="/admin/forgot-password">

    <div class="form_header">
      <h1>Esqueceu a Senha?</h1>
    </div>

    <div class="fields">
      <div>
        <h3>E-mail</h3>
        <div>
          <input type="email" name="email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')" placeholder="Digite seu e-mail para recuperar sua senha" required="required">
        </div>
      </div>
    </div>

    <div class="recover">
      <button class="save" type="submit">Recuperar</button>
    </div>

  </form>

{% endblock content %}