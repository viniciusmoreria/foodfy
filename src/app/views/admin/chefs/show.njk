{% extends "../layout.njk" %}

{% block content %}

  <section class="chef_profile adm">

    <div class="chef">
      {% if session.admin %}

        <div class="page_title">
          <h1>Chef:
            {{chef.name}}
          </h1>
          <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        </div>

      {% endif %}

      <img src="{{image.src}}" alt="Imagem de {{chef.name}}"/>
      <h2>{{chef.name}}</h2>
      <p>{{chef.total_recipes}}
        receitas</p>
    </div>

  </section>

  <section>
    <div class="chef_recipes">
      <h2>Receitas</h2>
      <div class="recipe_box">
        {% for recipe in recipes %}
          {% if chef.id == recipe.chef_id %}
            <div class="recipe">
              <img src="{{recipe.src}}" alt="Imagem de {{recipe.title}}"/>
              <div>
                <h3>{{recipe.title}}</h3>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

{% endblock %}